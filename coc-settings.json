{
  "languageserver": {
    "go": {
      "command": "gopls",
      "rootPatterns": ["go.mod"],
      "trace.server": "verbose",
      "filetypes": ["go"]
    },
    "zls": {
        "command": "~/tools/zig/zls/bin/zls",
        "filetypes": ["zig"]
    },
    "kotlin": {
      "command": "~/.local/share/nvim/lsp/kotlin/bin/kotlin-language-server",
      "filetypes": ["kotlin"]
    }
  }
}
